/**app.wxss**/
page{
  font-family: PingFang SC;
  background-color: #f4f4f4;
  color: #000000;
  font-weight: 400;
}
.gray{
  color: #999999;
}
.dark_gray{
  color: #666666;
}
.white{
  color: #ffffff;
}
.orange{
  color: #EE7500;
}
.light_orange{
  color: #FF7300;
}
.red{
  color: #DF2835;
}
.blue{
  color: #0061FE;
}
.green{
  color: #1AB57C;
}
.purple{
  color: #6537C0;
}
.white_bg{
  background-color: #ffffff;
}
.orange_bg{
  background-color: #EE7500;
}
.light_orange_bg{
  background-color: #FF7300;
}
.blue_bg{
  background-color: #015FFF;
}
.purple_bg{
  background-color: #8B5AE9;
}
.yellow_bg{
  background-color: #FFCC00;
}
.gradual_bg{
  background: linear-gradient(0deg, rgb(240, 116, 0),rgba(248, 145, 0));
}
.border{
  border-bottom: 1rpx solid #e1e1e1;
}
.orange_border{
  border: 1rpx solid #EE7500;
}
/* 输入框字颜色 */
.placeholder_color{
  color: #999999;
}
/* 按钮 */
button::after{
  outline: none;
  border: none;
}
/* 滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
/* 灰层底 */
.grayc{
  width: 100%;
  height: 100%;
  margin: auto;
  background-color: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
}
/* 空白页 */
.searchNo{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.searchNo image{
  width: 232rpx;
  height: 225rpx;
  display: block;
  margin-bottom: 68rpx;
  margin-top: 307rpx;
}
.searchNo text{
  font-size: 32rpx;
}