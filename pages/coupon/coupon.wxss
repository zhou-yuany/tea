/* pages/coupon/coupon.wxss */
.box{
  /* padding: 25rpx 32rpx 0; */
}
.title {
  width: 100%;
  height: 104rpx;
  background-color: #f6f6f6;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title-sel {
  width: 50%;
  height: 84rpx;
  color: #999999;
  font-size: 28rpx;
  line-height: 84rpx;
  text-align: center;
  position: relative;
  background-color: #ffffff;
}
.title-sel-selected{
  width: 50%;
  height: 84rpx;
  color: #333333;
  font-size: 28rpx;
  line-height: 84rpx;
  text-align: center;
  position: relative;
  background-color: #ffffff;
}
.onxian{
  width: 120rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: var(--themeColor);
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -60rpx;
}
.swiper {
  width: 100%;
  margin: 0 auto;
  overflow: scroll;
}
/* 优惠券 */
.record-item {
  width: 620rpx;
  height: 220rpx;
  margin: auto;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  padding: 0 35rpx;
  position: relative;
  filter: drop-shadow(0px 2px 10px rgba(5, 0, 0, 0.1));
  background: radial-gradient(circle at 20rpx center, transparent 20rpx, #ffffff 20rpx) -20rpx;
}
.top{
  width: 100%;
  height: 156rpx;
  margin: auto;
  border-bottom: 1px dashed #D8D8D8;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.leftpart{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 25rpx;
  margin-right: 53rpx;
}
.leftpart view{
  font-size: 56rpx;
  font-family: PingFangSCHeavy-Heavy;
}
.leftpart view text{
  font-size: 20rpx;
}
.leftpart text{
  font-size: 24rpx;
}
.rightp{
  display: flex;
  flex-direction: column;
  margin-right: auto;
}
.rightp text{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
}
.top button{
  width: 144rpx;
  height: 56rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 56rpx;
  margin: 0;
  padding: 0;
}
.bottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12.5rpx 0;
}
.bottom text{
  font-size: 20rpx;
  line-height: 39rpx;
  margin-left: 6rpx;
}