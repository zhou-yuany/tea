/* pages/productxq/productxq.wxss */
page{
  background-color: #ffffff;
}
.box{
  padding-bottom: 250rpx;
}
/* 图片 */
.pick{
  width: 100%;
  height: 750rpx;
  margin: auto;
  position: relative;
}
.pick image{
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
}
.custom{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  height: 90rpx;
  z-index: 999;
  text-align: center;
  line-height: 90rpx;
}
.empty_custom{
  height: 90rpx;
  width: 100%;
}
.back{
  width: 35rpx!important;
  height: 35rpx!important;
  position: absolute;
  top: 50%!important;
  left: 32rpx;
  margin-top: 30rpx;
  z-index: 1;
}
/* 内容 */
.title{
  width: 708rpx;
  font-size: 40rpx;
  font-weight: bold;
  text-align: left;
  padding: 47rpx 0 44rpx 42rpx;
}
.content{
  width: 668rpx;
  margin: auto;
  font-size: 23rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: justify;
  margin-bottom: 34rpx;
}
.tipk{
  width: 668rpx;
  margin: auto;
  display: flex;
  flex-direction: column;
  font-size: 23rpx;
  line-height: 40rpx;
  font-weight: bold;
  margin-bottom: 55rpx;
}
/* 规格 */
.choosegg{
  width: 668rpx;
  margin: auto;
  margin-bottom: 14rpx;
}
.guigename{
  font-size: 23rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin-bottom: 17rpx;
}
.guigek{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.guigek view{
  width: auto;
  height: 55rpx;
  background-color: var(--unThemeColor);
  border-radius: 55rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 55rpx;
  margin-right: 20rpx;
  position: relative;
  padding: 0 56rpx;
  margin-bottom: 20rpx;
}
.onchoose{
  background-color: var(--themeColor)!important;
  color: #fff;
}
.guigek view.tips{
  width: 60rpx;
  height: 30rpx;
  border-radius: 10rpx;
  border-bottom-left-radius: 0rpx;
  background-color: var(--secondColor);
  position: absolute;
  top: -25rpx;
  left: 50%;
  z-index: 2;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color: #000;
  padding: 0;
}
.guigek view.tip{
  width: 106rpx;
  height: 30rpx;
  border-radius: 10rpx;
  border-bottom-left-radius: 0rpx;
  background-color: var(--secondColor);
  position: absolute;
  top: -25rpx;
  left: 50%;
  z-index: 2;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  color: #000;
  padding: 0;
}
/* 详情图 */
.message_pick{
  width: 100%;
  height: auto;
  margin: auto;
}
.message_pick image{
  width: 100%;
  display: block;
}
/* 底部 */
.foot{
  width: 100%;
  height: 240rpx;
  margin: auto;
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(0, 0, 0, 0.16);
  padding-top: 10rpx;
  position: fixed;
  bottom: 0;
}
.zuoce{
  display: flex;
  align-items: center;
}
.bq{
  width: 110rpx;
  height: 32rpx;
  border-radius: 4rpx;
  background: rgba(252, 34, 33, 0.1);
  text-align: center;
  font-size: 18rpx;
  line-height: 32rpx;
  margin-right: 11rpx;
}
.youhuijia{
  font-size: 32rpx;
  font-weight: bold;
}
.youhuijia text{
  font-size: 24rpx!important;
  font-weight: 400!important;
}
.yuanjia{
  font-size: 24rpx;
  text-decoration: line-through;
  margin-top: 8rpx;
  margin-left: 10rpx;
}
.foothang{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  padding-left: 53rpx;
}
.foothang text{
  font-size: 32rpx;
  font-weight: bold;
  margin-right: auto;
}
.item-center{
  width: 160rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 30rpx;
}
.buy-num-btn{
  width: 47.5rpx;
  height: 47.5rpx;
  border-radius: 10rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 34rpx;
  padding: 0;
}
.buy-num-txt{
  width: 65rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
}
.btn-minus{
  border: 1px solid var(--themeColor)!important;
  background-color: #ffffff!important;
  color: var(--themeColor)!important;
}
.btn-add{
  border: 1px solid var(--themeColor)!important;
  background-color: var(--themeColor)!important;
  color: #ffffff!important;
}
.foothanga{
  width: 100%;
  margin: auto;
  padding-left: 52rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  margin-bottom: 40rpx;
}
.addbtn{
  width: 686rpx;
  height: 80rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
}