/* pages/vehicle/vehicle.wxss */
.box{
  padding-top: 23rpx;
}
.weui-cell{
  width: 650rpx;
  height: auto;
  margin: auto;
  box-shadow: 0rpx 7rpx 7rpx 1rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  margin-bottom: 20rpx;
}
.weuicell_hd{
  width: 100%;
  height: 68rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.leftpart{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.leftpart image{
  width: 32rpx;
  height: 26rpx;
  margin-right: 4rpx;
}
.leftpart text{
  /* font-size: 34rpx; */
  font-size: 38rpx;
}
.option-icon{
  width: 33rpx;
  height: 33rpx;
}
.hang{
  width: 100%;
  /* height: 68rpx; */
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* font-size: 30rpx; */
  font-size: 34rpx;
}
.hang input{
  width: 400rpx;
  font-size: 30rpx;
  text-align: right;
}
.stepper {  
  width: 134rpx;  
  height: 35rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.stepper .sign {  
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;  
  line-height: 30rpx;  
  text-align: center;
}  
.stepper .number {  
  width: 62rpx;  
  height: 35rpx;
  margin: 0 auto;   
  text-align: center;  
  font-size: 20rpx; 
} 
.stepper .normal{  
  background-color: #EE7500;
  color: #ffffff; 
} 
.stepper .disabled{  
  border: 1px solid #EE7500;
  color: #EE7500;  
}
.btnzu{
  width: 100%;
  height: 199rpx;
  margin: auto;
  padding: 56rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 258rpx;
}
.btnzu button{
  width: 650rpx;
  height: 84rpx;
  border-radius: 40rpx;
  font-size: 34rpx;
  line-height: 84rpx;
}