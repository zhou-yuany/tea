<!--pages/orderlist/orderlist.wxml-->
<view class="box" style="{{theme}}">
  <scroll-view scroll-y bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view class="swiper-tab white_bg">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">今日订单<view class="line {{currentTab==0 ? 'ons' : ''}}"></view></view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">历史订单<view class="line {{currentTab==1 ? 'ons' : ''}}"></view></view>
    </view>
    <swiper current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange" style="height:{{scrollHeight}}px">
      <swiper-item class='swiper'>
          <block wx:for="{{nowList}}" wx:key="index">
            <view class="itemk white_bg" bindtap="goXq" data-id="{{item.id}}">
              <view class="hang">
                <text style="color: {{item.orderType == 2 ? 'var(--secondColor)' : 'var(--themeColor)'}};">{{item.orderType == 2 ? '自提单' : '外卖单'}}</text>
                <text style="color: {{item.orderStatus <= 1 ? 'var(--secondColor)' : ''}};">{{item.orderStatus <= 1 ? '制作中' : '已完成'}}</text>
              </view>
              <view class="middlek">
                <view class="title">{{item.shopName}}</view>
                <view class="goodslist shen_gray" wx:for="{{item.params}}" wx:for-item="param" wx:for-index="index2" wx:key="index2">
                  <text>{{param.name}}（{{param.specifications}}）</text>
                  <text>￥{{param.price * param.number}}</text>
                </view>
                <view class="hanga">
                  <text class="gray">{{item.createTime}}</text>
                  <text style="margin-left: auto;">共{{item.totalCount}}件商品，实付</text>
                  <text class="sf">￥{{item.totalPrice}}</text>
                </view>
              </view>
              <view class="bottomk">
                <button type="button" class="white_bg againbtn dark_hui" catchtap="goAgain" data-id="{{item.id}}">再来一单</button>
              </view>
            </view>
          </block>
           <!-- 空 -->
        <view class="kong" wx:if="{{nowList.length == 0}}">
          <image src="/static/kong3.png" mode=""/>
          <text>暂无订单</text>
          <text class="gray">快去选择一杯喜欢的饮品吧~</text>
        </view>
      </swiper-item>
       <swiper-item class='swiper'>
          <block wx:for="{{nowList}}" wx:key="index">
            <view class="itemk white_bg" bindtap="goXq" data-id="{{item.id}}">
              <view class="hang">
                <text style="color: {{item.orderType == 2 ? 'var(--secondColor)' : 'var(--themeColor)'}};">{{item.orderType == 2 ? '自提单' : '外卖单'}}</text>
                <text style="color: {{item.orderStatus <= 1 ? 'var(--secondColor)' : ''}};">{{item.orderStatus <= 1 ? '制作中' : '已完成'}}</text>
              </view>
              <view class="middlek">
                <view class="title">{{item.shopName}}</view>
                <view class="goodslist gray"  wx:for="{{item.params}}" wx:for-item="param" wx:for-index="index2" wx:key="index2">
                  <text>{{param.name}}（{{param.specifications}}）</text>
                  <text>￥{{param.price * param.number}}</text>
                </view>
                <view class="hanga gray">
                  <text>{{item.createTime}}</text>
                  <text>共{{item.totalCount}}件商品，实付</text>
                  <text class="sf">￥{{item.totalPrice}}</text>
                </view>
              </view>
              <view class="bottomk">
                <button type="button" class="white_bg againbtn" catchtap="goAgain" data-id="{{item.id}}">再来一单</button>
              </view>
            </view>
          </block>
           <!-- 空 -->
        <view class="kong" wx:if="{{nowList.length == 0}}">
          <image src="/static/kong3.png" mode=""/>
          <text>暂无订单</text>
          <text class="gray">快去选择一杯喜欢的饮品吧~</text>
        </view>
      </swiper-item>
    </swiper>
  </scroll-view>
</view>