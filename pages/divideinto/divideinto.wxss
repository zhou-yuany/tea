    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    padding-top: 45rpx;
    padding-bottom: 33rpx;
}
.picker{
    display: flex;
    align-items: center;
    margin-left: 50rpx;
}
.picker image{
    width: 24rpx;
