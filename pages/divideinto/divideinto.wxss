/* pages/divideinto/divideinto.wxss */
.intok{
    width: 634rpx;
    height: 80rpx;
    border-radius: 20rpx;
    margin: auto;
    background: var(--bgColor-second);
    box-shadow: 0rpx -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.08);
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 26rpx;
}
.intok view{
    font-size: 40rpx;
}
.intok view text{
    font-size: 24rpx;
    margin-left: 12rpx;
}
/* 筛选 */
.screenk{
