/* pages/integral_my/integral_my.wxss */
.box{
  padding-top: 24rpx;
}
.hanga{
  width: 690rpx;
  height: 191rpx;
  margin: auto;
  background: linear-gradient(106deg, #F2BF7E 0%, #F28E76 98%);
  border-radius: 20rpx;
  box-shadow: 0rpx -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.hanga text{
  font-size: 28rpx;
  line-height: 45rpx;
}
.hanga text:last-child{
  font-size: 48rpx;
  font-family: PingFangSCHeavy-Heavy;
}
.title{
  font-size: 30rpx;
  line-height: 39rpx;
  padding-bottom: 23rpx;
  padding-top: 80rpx;
  margin-left: 50rpx;
}
.scrollview{
  width: 650rpx;
  margin: auto;
}
.itemk{
  width: 100%;
  height: 100rpx;
  margin: auto;
  border-bottom: 1px solid #F6F6F6;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.leftp{
  width: 80%;
  height: 100%;
}
.name{
  font-size: 28rpx;
}
.time{
  font-size: 24rpx;
  margin-left: 32rpx;
}
.rightp{
  font-size: 28rpx;
}