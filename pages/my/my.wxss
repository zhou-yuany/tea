/* pages/my/my.wxss */
/* 图 */
.parent {
  width: 100%;
  height: 455rpx;
  background: var(--bgColor-main);
  margin: auto;
}
/* 个人信息 */
.personalk{
  width: 686rpx;
  /* height: 350rpx; */
  height: 170rpx;
  margin: auto;
  margin-top: -102rpx;
  position: relative;
  z-index: 10;
  border-radius: 24rpx;
}
.headerk{
  display: flex;
}
.header_l{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 25rpx;
}
.hanga{
  width: 100%;
  margin-bottom: 14rpx;
}
.hanga text{
  font-size: 32rpx;
  font-weight: bold;
}
.head{
  width: 184rpx;
  height: 184rpx;
  display: block;
  border-radius: 50%;
  margin-right: 37rpx;
  margin-left: 44rpx;
  margin-top: -92rpx;
}
.tips{
  font-size: 24rpx;
  line-height: 35rpx;
}
.funlist{
  height: 99rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 90rpx;
}
.funitem{
  width: 33.333%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #D8D8D8;
}
.funitem text{
  font-size: 48rpx;
  font-family: PingFangSCHeavy-Heavy;
}
.funitem text:last-child{
  font-size: 24rpx;
  line-height: 45rpx;
  margin-top: 4rpx;
}
/* 我的服务 */
.groupa{
  width: 686rpx;
  /* height: 220rpx; */
  height: auto;
  margin: auto;
  border-radius: 24rpx;
  margin-top: 33rpx;
}
.subtitle{
  width: 100%;
  margin: auto;
  padding-top: 19rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 45rpx;
  padding-bottom: 32rpx;
  padding-left: 36rpx;
}
.liebiao{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.liebiao view{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}
.groupa view image{
  width: 45rpx;
  height: 45rpx;
  display: block;
  margin-bottom: 8rpx;
}
.groupa view text{
  font-size: 24rpx;
  font-weight: bold;
  line-height: 45rpx;
}
.liebiao view.tip{
  width: 57rpx;
  height: 25rpx;
  border-radius: 8rpx 8rpx 8rpx 0rpx;
  font-size: 16rpx;
  text-align: center;
  line-height: 25rpx;
  position: absolute;
  top: -19rpx;
  right: 0;
  z-index: 10;
}