<!--pages/dailysales/dailysales.wxml-->
<view class="box">
  <view class="headtop">
    <view class="startime">
      <picker class='time-picker' mode="date" value="{{date}}" start="{{starttime}}" end="{{endtime}}" bindchange="bindDateChange">  
        <text style="margin-right: 14rpx;">{{dates}}</text>
        <image src="/images/time.png" class="xiala"></image>
      </picker>  
    </view>
    <image src="/images/mode.png" class="mode" bindtap="goHorizontal"></image>
  </view>
  <view class="table">
    <view class="tr bg-w">
      <view class="th orange" style="width: 30%;">日期</view>
      <view class="th orange">总销售额</view>
      <view class="th orange">订单数</view>
      <view class="th orange" style="width: 20%;">单价</view>
    </view>
    <block wx:for="{{saleData}}" wx:key="{[time]}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td" style="width: 30%;">{{item.time}}</view>
        <view class="td">{{item.allsale}}</view>
        <view class="td">{{item.num}}</view>
        <view class="td" style="width: 20%;">{{item.price}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="td" style="width: 30%;">{{item.time}}</view>
        <view class="td">{{item.allsale}}</view>
        <view class="td">{{item.num}}</view>
        <view class="td" style="width: 20%;">{{item.price}}</view>
      </view>
    </block>
  </view>
</view>