/* pages/report/report.wxss */
.box{
  padding-top: 23rpx;
}
.formk{
  width: 648rpx;
  height: auto;
  box-shadow: 0rpx 7rpx 7rpx 1rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
  margin: auto;
  padding: 25rpx 31rpx 54rpx 31rpx;
}
form{
  width: 100%;
  height: 100%;
}
.groupa{
  width: 100%;
  height: auto;
  margin: auto;
  position: relative;
  margin-bottom: 24rpx;
}
.hang{
  width: 550rpx;
  height: 88rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.identify{
  width: 33rpx;
  height: 33rpx;
  border-radius: 50%;
  font-size: 20rpx;
  text-align: center;
  line-height: 33rpx;
  margin-right: 10rpx;
  margin-left: -7rpx;
}
.picker{
  font-size: 34rpx;
}
.change{
  width: 28rpx;
  height: 35rpx;
  display: block;
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -17.5rpx;
}
.linea{
  width: 100%;
  height: 80rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}
.contant-pic{
  width: 100%;
  margin: 0 auto;
  height: 160rpx; 
}
.pics-list{
  width: 162rpx;
  height: 162rpx;
  float: left;
  margin-right: 28rpx; 
}
.uploadImg{
  width: 162rpx;
  height: 162rpx;
}
.uploadImg-error{
  height: 50rpx;
  width: 50rpx;
  position: relative;
  top: -190rpx;
  left: 132rpx;
}
.hideTrue {
  display: none
}
.true {
  display: block
}
.inquiry{
  width: 650rpx;
  height: 84rpx;
  border-radius: 40rpx;
  margin: auto;
  font-size: 34rpx;
  text-align: center;
  line-height: 84rpx;
  margin-top: 65rpx;
}
/* 弹窗 */
.pingjiak{
  width: 552rpx;
  height: 622rpx;
  margin: auto;
  position: fixed;
  left: 0;
  right: 0;
  top: 250rpx;
}
.pingjiak image{
  width: 100%;
  height: 100%;
  display: block;
}
.success{
  width: 100%;
  margin: auto;
  position: absolute;
  top: 77rpx;
  left: 0;
  right: 0;
  font-size: 43rpx;
  text-align: center;
}
.pingyu{
  width: 100%;
  margin: auto;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  bottom: 236rpx;
  left: 0;
  right: 0;
}
.pingjiak button{
  width: 419rpx;
  height: 73rpx;
  border-radius: 37rpx;
  font-size: 28rpx;
  line-height: 73rpx;
  text-align: center;
  margin: auto;
  position: absolute;
  bottom: 37rpx;
  left: 0;
  right: 0;
}