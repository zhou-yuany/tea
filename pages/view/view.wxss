/* pages/view/view.wxss */
.headtop{
  width: 100%;
  height: 70rpx;
  margin: auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.headtop text{
  width: 50%;
  font-size: 24rpx;
  margin-left: 19rpx;
}
.headtop image{
  width: 28rpx;
  height: 22rpx;
  display: block;
  margin-right: 23rpx;
}
/* 内容 */
/* 商圈下拉选 */
.tradingarea{
  width: 100%;
  height: 70rpx;
  margin: auto;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  margin-top: 70rpx;
}
.arealist{
  width: 100%;
  height: 70rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arealist text{
  margin-left: 24rpx;
  font-size: 28rpx;
}
.arealist image{
  width: 22rpx;
  height: 20rpx;
  display: block;
  margin-right: 24rpx;
}
.selectbox {
  background-color: rgba(0, 0, 0, .75);
  width: 100%;
  position: absolute;
  left: 0;
  top: 140rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
@keyframes myfirst {
  from {
    height: 0rpx;
  }
  to {
    height: 210rpx;
  }
}
.select_one {
  height: 75rpx;
  line-height: 75rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
}
.select_one:last-child{
  border-bottom: 0;
}
/* 销售排名 */
.tr {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  height: 80rpx;
  align-items: center;
}
.td {
  width:25%;
  justify-content: center;
  text-align: center;
}
.th {
  width: 25%;
  justify-content: center;
  display: flex;
  height: 80rpx;
  align-items: center;
}
/* 服务用户 */
.userk{
  width: 100%;
  height: 148rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userk view{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 50rpx;
}
/* 支付渠道 */
.channel{
  padding: 33rpx 25rpx 14rpx 25rpx;
}
.wechat{
  height: 100rpx;
  border-radius: 10rpx;
  margin-bottom: 21rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.wechat text{
  font-size: 32rpx;
