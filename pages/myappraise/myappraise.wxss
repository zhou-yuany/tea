  align-items: center;
}
.kong image{
  width: 374rpx;
  height: 346rpx;
  display: block;
  margin-bottom: 29rpx;
  margin-top: 170rpx;
}
.kong text{
  font-size: 26rpx;
  opacity: 0.5;
}