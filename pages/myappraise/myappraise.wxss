  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 0;
}
.hang text{
  font-size: 18rpx;
}
.hang button{
  width: 251rpx;
  height: 83rpx;
  border-radius: 42rpx;
  margin: 0;
  font-size: 30rpx;
  text-align: center;
  line-height: 83rpx;
  border: 1px solid #F1F1F1;
}
.huifu{
  width: 664rpx;
  margin: auto;
  padding: 18rpx;
  font-size:24rpx;
  line-height: 1.3;
