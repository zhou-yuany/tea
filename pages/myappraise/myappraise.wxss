}
.time{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.time image{
  width: 22rpx;
  height: 22rpx;
  display: block;
  margin: 0 7rpx;
}
.listDesc{
  font-size:24rpx;
}
.pinglunImg{
  margin-top: 29rpx;
