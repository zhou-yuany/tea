<!-- 授权登录 -->
<view class="box-login" wx:if="{{login}}">
  <view class="empowerk">
    <image src="{{urlPrefix}}/static/empower1.png" mode="aspectFill"></image>
    <view class="tips">运个车小程序申请授权</view>
    <view class="tipwords">尊敬的合伙人企业在授权前请您先确认您的手机号在运个车管理平台中已绑定。</view>
    <!-- <button class="btn white" hidden="{{!loginStep}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权登录</button> -->

    <view class="btn">
      <button class="white" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">授权手机号</button>
      <button type="button" bind:tap="cancelLogin" class="white_bg">取消</button>
    </view>
  </view>
</view>
<view class="box">
  <!-- 分享 -->
  <button class="enjoy white_bg light_orange" bindtap="goEnjoy"><image src="{{urlPrefix}}/static/enjoys.png"></image><text>分享有礼</text></button>
  <!-- 合伙人显示下面三个图片 -->
  <!-- 客户端显示下面一个图片 -->
  <view class="picture" wx:if="{{admin == 1}}">
    <image src="{{urlPrefix}}/static/logo0.png" class="logo"></image>
  </view>
  <view class="picture" wx:if="{{admin == 2}}">
    <image src="{{urlPrefix}}/static/logo0.png" class="logo"></image>
    <image src="{{urlPrefix}}/static/link.png" class="link"></image>
    <image src="data:image/png;base64,{{logo}}" mode="aspectFit" wx:if="{{logo}}" class="logos"></image>
    <image src="{{urlPrefix}}/static/logo1.png" mode="aspectFit" wx:if="{{!logo}}" class="logos"></image>
  </view>
  <view class="formk white_bg">
    <form>
      <view class="groupa">
        <view class="hang border">
          <view class="identify orange_bg white">始</view>
          <picker mode="region" bindchange="bindRegionChangeStart" value="{{start}}" animation="{{startAnimation}}">
            <view class="picker gray {{clas}}">{{start[0]}}{{start[1]}}{{start[2]}}</view>
          </picker>
        </view>
        <view class="hang">
          <view class="identify blue_bg white">终</view>
          <picker mode="region" bindchange="bindRegionChangeDest" value="{{dest}}" animation="{{destAnimation}}">
            <view class="picker gray {{clas}}">{{dest[0]}}{{dest[1]}}{{dest[2]}}</view>
          </picker>
        </view>
        <image src="{{urlPrefix}}/static/change.png" class="change" bindtap="goChange"></image>
      </view>
      <view class="linea">
        <view>期望托运日期</view>
        <picker mode="date" value="{{startTime}}" start="{{defaultStartDate}}" bindchange="bindDateChange">
          <view class="date gray">{{startTime}} ></view>
        </picker>
      </view>
      <view class="linea" bindtap="goChoosecar">
        <view>托运车辆</view>
        <view class="gray">{{cars.length > 0 ? '已选择' : '请选择'}} ></view>
      </view>
      <view class="linea">
        <view>数量</view>
        <view class="stepper"> 
          <input class="number" type="number" bindchange="bindManual" value="{{countsCar}}"  disabled="disabled"/>
        </view>
      </view>
      <view class="linea" bindtap="goCrv">
        <view>上门提车</view>
        <view class="gray">{{needJc == 1 ? '是' : '否'}} ></view>
      </view>
      <view class="linea">
        <view>备注</view>
        <input type="text" placeholder="请输入（非必填）" bindchange="bindRemarks" placeholder-class="placeholder_color" class="forminput" />
      </view>
      <view class="linea red" style="font-size: 28rpx;align-items: flex-start;justify-content: flex-start;">
        <view>注：</view>
        <text>每辆车赠送价值10万运输险，保证您爱车的安全</text>
      </view>
      <button type="button" class="inquiry gradual_bg white" bindtap="goEnquire">发起询价</button>
    </form>
  </view>
  <!-- 客服 -->
  <!-- <view class="servicek orange_bg {{s_move==false?'move_t':''}} {{s_move==true?'move_tf':''}}" bindtap="show_move">
    <image src="{{urlPrefix}}/static/service.png"></image>
    <text class="white">在线客服</text>
    <button class="none-btn" open-type="contact" session-from="weapp" hover-class="btn-hover">
      <my-icon my-class="my-icon" type="lianxikefu" size="20" color="#90D8FF" />
    </button>
  </view> -->
  <view class="lianxikf orange_bg" bindtap='freeTell'>
    <image src="{{urlPrefix}}/static/phones.png"></image>
  </view>
  <!-- 广告图 -->
  <view class="parent">
    <swiper bindchange="monitorCurrent" indicator-dots="{{false}}" circular="true" indicator-color="white" indicator-active-color="orange" current="{{current}}" autoplay="{{autoplay}}">
        <swiper-item>
          <image src="{{urlPrefix}}/static/banner1.png"></image>
        </swiper-item>
        <swiper-item>
          <image src="{{urlPrefix}}/static/banner2.png"></image>
        </swiper-item>
        <swiper-item>
          <image src="{{urlPrefix}}/static/banner3.png"></image>
        </swiper-item>
    </swiper>
  </view>
</view>

