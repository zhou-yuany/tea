    <image src="{{urlPrefix}}/static/help.png" class="helpico" bindtap="goRules"></image>
    <view class="activek">
      <!-- {{activityInfo.startProv}}{{activityInfo.destProv}} -->
      <view class="xianlu yellow_bg white"><text>{{activityInfo.startCity}}</text>-<text>{{activityInfo.destCity}}</text></view>
      <view class="active_price red">特价￥<text>{{activityInfo.activityPrice}}</text></view>
      <view class="active_time">活动时间 {{activityInfo.startTime}} — {{activityInfo.endTime}}</view>
    </view>
    <view class="codeks"><image src="{{shareUrl}}" bindlongpress="saveImage"></image></view>
  </view>
  <image src="{{urlPrefix}}/static/close.png" class="closed" bindtap="goClosed"></image>
</view>
