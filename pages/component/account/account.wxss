@import "/app.wxss";

.gather{
  width: 100%;
  height: 93rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.gather image{
  width: 33rpx;
  height: 33rpx;
  display: block;
  margin-left: 24rpx;
}
.gather text{
  font-size: 30rpx;
  margin-right: 25rpx;
}
.group{
  width: 650rpx;
  height: auto;
  margin: auto;
  box-shadow: 0rpx 7rpx 7rpx 1rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}
.head{
  width: 100%;
  height: 83rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.head view image{
  width: 20rpx;
  height: 33rpx;
  margin-right: 19rpx;
}
.head view text{
  font-size: 30rpx;
}
.state{
  font-size: 24rpx;
}
.middle{
  width: 100%;
  height: auto;
  margin: auto;
  padding-bottom: 18rpx;
}
.addressk{
  width: 100%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 31rpx 0;
  position: relative;
}
.left{
  width: 72%;
}
.startend{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.startend view{
  width: 33rpx;
  height: 33rpx;
  border-radius: 50%;
  font-size: 20rpx;
  text-align: center;
  line-height: 33rpx;
  margin-right: 10rpx;
}
.startend text{
  font-size: 34rpx;
  line-height: 51rpx;
}
.right{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.right text{
  font-size: 26rpx;
}
.number{
  font-size: 24rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.yitixian{
  width: 120rpx;
  height: 50rpx;
  border-radius: 10rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}
/* 分销规则 */
.fixed{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.rulesk{
  width: 90%;
  height: 90%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  position: relative;
  overflow: hidden;
  overflow-y: scroll;
  padding: 15rpx 20rpx;
}
.rule_title{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  line-height: 51rpx;
}
.guanbi{
  font-size: 20rpx;
  position: absolute;
  top: 14rpx;
  right: 15rpx;
}
.rule_subtitle{
  font-size: 28rpx;
  text-align: left;
}
.rulesk text{
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: justify;
}
.rulesk image{
  width: 100%;
}