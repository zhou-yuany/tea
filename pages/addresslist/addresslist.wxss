/* pages/addresslist/addresslist.wxss */
.item{
    width: 686rpx;
    height: auto;
    margin: auto;
    border-radius: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 0;
    margin-bottom: 32rpx;
  }
  .leftpart{
    width: 85%;
    margin-left: 18rpx;
  }
  .firsth{
    width: 100%;
    font-size: 28rpx;
    line-height: 39rpx;
    position: relative;
    margin-bottom: 20rpx;
  }
  .addressxq{
    font-size: 24rpx;
    line-height: 39rpx;
  }
  .addressxq text:last-child{
    margin-left: 20rpx;
  }
  .edit{
    width: 36rpx;
    height: 36rpx;
    margin-right: 23rpx;
  }
  .editk{
    width: 100%;
    height: 100%;
    display: block;
  }
  .default{
    width: 75rpx;
    height: 30rpx;
    font-size: 20rpx;
    text-align: center;
    line-height: 30rpx;
    margin-right: 8rpx;
    position: absolute;
    top: 4rpx;
    left: 0;
    z-index: 1;
    text-indent: 0;
  }
  .addbtn{
    width: 580rpx;
    height: 80rpx;
    margin: auto;
    border-radius: 40rpx;
    font-size: 33rpx;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 48rpx;
    z-index: 1;
  }
/* 外卖 */
