/* pages/write/write.wxss */
.box{
  padding-top: 23rpx;
}
.signName{
  width: 710rpx;
  height: 1000rpx;
  box-shadow: 0rpx 7rpx 7rpx 1rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
  margin: auto;
}
canvas{
  width: 100%;
  height: 100%;
}
.CList{
  width: 100%;
  height: 110rpx;
  margin: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.flex{
  display: flex;
  justify-content: center;
  align-items: center;
}
.CList button{
  width: 350rpx;
  height: 75rpx;
  border-radius: 38rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 73rpx;
}