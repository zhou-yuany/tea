/* pages/login/login.wxss */
page{
    background-color: #ffffff;
  }
  .box{
    width: 100%;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .box image{
    width: 300rpx;
    height: 300rpx;
    display: block;
    margin-top: 130rpx;
    margin-bottom: 150rpx;
  }
  .box text{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 45rpx;
    text-align: center;
  }
  .box button{
    width: 600rpx;
    height: 72rpx;
    border-radius: 540rpx;
    font-weight: bold;
    font-size: 28rpx;
    text-align: center;
    line-height: 72rpx;
    margin-bottom: 48rpx;
    border: 1px solid var(--themeColor);
  }
  /* 弹窗 */
  .mask{
    width: 100%;
    height: 100%;
    margin: auto;
    background-color: rgba(0, 0, 0, .75);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
  }
  .kuang{
    width: 100%;
    height: 500rpx;
    margin: auto;
    position: fixed;
    bottom: 0;
    z-index: 2;
  }
  .title{
    width: 100%;
    font-size: 32rpx;
    line-height: 46rpx;
    text-align: center;
    font-weight: 600;
    margin-top: 28rpx;
  }
  .kuang input{
    width: 475rpx;
    height: 80rpx;
    margin: auto;
    border: 3rpx solid #BFBFBF;
    font-size: 28rpx;
    padding-left: 25rpx;
    margin-top: 63rpx;
    margin-bottom: 23rpx;
  }
  .tips{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    line-height: 35rpx;
  }
  .btn-group{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 77rpx;
  }
  .btn-group button{
    width: 200rpx;
    height: 63rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 61rpx;
    margin: 0 36rpx;
  }
  .cancel{
    border: 1px solid var(--themeColor);
  }