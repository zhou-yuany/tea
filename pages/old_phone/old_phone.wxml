<!--pages/old_phone/old_phone.wxml-->
<view class="box">
  <view class="red tips">*为了您的使用安全请通过一下方式验证</view>
  <view class="white_bg telk">
    <view class="hang border">
      <text>手机号</text>
      <input placeholder='{{phone}}' value='{{phone}}' disabled="disabled" placeholder-class="placeholder_color" />
      <button class='codeBtn orange_border orange white_bg' bindtap='getVerificationCode' disabled='{{disabled}}'>发送验证码</button>
    </view>
    <view class="hang">
      <text>验证码</text>
      <input placeholder-class="placeholder_color" placeholder='请输验证码' bindinput='getCodeValue' style='width:75%;' />
    </view>
  </view>
  <button class='changeBtn gradual_bg white' bindtap='save'>验证</button>
</view>
<!-- 提示窗 -->
<view class="grayc" wx:if="{{hidden}}">
  <view class="pingjiak">
    <image src="{{urlPrefix}}/static/success.png"></image>
    <view class="white success">验证成功</view>
    <view class="pingyu">现在可以更换手机号</view>
    <button type="button" class="gradual_bg white" bindtap="goSure">立刻更换</button>
  </view>
</view>