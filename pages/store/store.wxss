/* pages/store/store.wxss */
page{
  background-color: #f2f2f2!important;
}
/* 搜索 */
.searchk{
  width: 686rpx;
  height: 70rpx;
  margin: auto;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.leftp{
  width: 154rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ddd;
}
.leftp text{
  font-size: 24rpx;
}
.leftp image{
  width: 15rpx;
  height: 15rpx;
  display: block;
  margin-left: 8rpx;
}
.rightp{
  width: 530rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.rightp image{
  width: 35rpx;
  height: 35rpx;
  display: block;
  margin: 0 15rpx;
}
.rightp input{
  width: 450rpx;
  height: 100%;
  font-size: 24rpx;
  line-height: 70rpx;
}
/* 地图 */
.mapk{
  width: 100%;
  height: 410rpx;
  margin: auto;
  margin-top: 30rpx;
}
.mapk map{
  width: 100%;
  height: 100%;
  display: block;
}
.diank{
  width: 100%;
  height: 60rpx;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.diank view{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-right: 62rpx;
}
.diank view:last-child{
  margin-right: 0;
}
.diank view image{
  width: 30rpx;
  height: 37rpx;
  display: block;
  margin-right: 19rpx;
}
/* 外卖 */
.dizhik{
  margin: auto;
  padding-left: 29rpx;
  padding-bottom: 10rpx;
}
.dz_bt{
  font-size: 24rpx;
  line-height: 45rpx;
  margin-bottom: 8rpx;
}
.dz_nr{
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dz_nr text{
  line-height: 45rpx;
}
.dz_nr image{
  width: 45rpx;
  height: 45rpx;
  display: block;
  margin-right: 10rpx;
}
.hang{
  font-size: 26rpx;
  line-height: 45rpx;
  margin-left: 26rpx;
  margin-top: 22rpx;
}
/* 列表 */
.scrollview{
  padding-top: 30rpx;
}
.itemk{
  width: 634rpx;
  height: auto;
  margin: auto;
  border-radius: 20rpx;
  box-shadow: 0 -4rpx 20rpx 0 rgba(0, 0, 0, 0.08);
  padding: 23rpx 26rpx 21rpx;
  margin-bottom: 32rpx;
  border: 1px solid #fff;
  position: relative;
}
.hanga{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hanga_l{
  display: flex;
  align-items: center;
}
.hanga_l image{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 15rpx;
}
.hanga_l view{
  width: 75rpx;
  height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  margin-right: 11rpx;
}
.hanga_l text{
  font-size: 32rpx;
}
.hanga_r{
  font-size: 26rpx;
}
.tiplist{
  width: 75rpx;
  height: 30rpx;
  border: 1px solid #333333;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}
.address{
  width: 468rpx;
  text-align: left;
  font-size: 24rpx;
  line-height: 39rpx;
}
.hangb{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time{
  font-size: 24rpx;
  line-height: 39rpx;
}
.cc{
  font-size: 24rpx;
  line-height: 39rpx;
}
.daohang{
  display: flex;
  align-items: center;
  position: absolute;
  top: 97rpx;
  right: 0;
  z-index: 1;
}
.daohang image{
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin-right: 29rpx;
}