  </view>
  <!-- 备注 -->
  <view class="white_bg groupa" wx:if="{{order.remarks}}">
      <view class="title border" style="position: relative;">备注<image src="../../static/edit.png" class="bianji" wx:if="{{orderStatus[order.orderState] == '已报价'}}" catchtap="editRemarks"></image></view>
      <view class="content">
        <view class="hangc">
          <textarea disabled="{{remarksFlag}}" bindinput="bindRemarks" class="gray" value="{{remarks}}"></textarea>
        </view>
      </view>
    </view>
  <view wx:if="{{userType == 1}}">
    <!-- 客户端显示 -->
    <view style="width: 100%;height: 141rpx;margin: auto;"></view>
    <!-- 客户端底部 -->
    <view class="white_bg footer">
      <!-- 已报价 -->
      <button type="button" class="gradual_bg white btn" bindtap="goInfo" wx:if="{{order.orderState == 20}}">立即下单</button>
      <view class="allpricek">
        <text>总报价</text>
        <!-- 询价单 -->
        <text class="gray allprice" wx:if="{{order.orderState < 20}}">等待报价</text>
        <!-- 已报价 -->
        <text class="red allprice" wx:if="{{order.orderState >= 20}}">￥{{order.totalPrice}}</text>
      </view>
    </view>
  </view>
  <view wx:if="{{userType == 2 && order.orderState < 20}}" style="height: 120rpx;width: 100%;margin: auto;"></view>
  <view wx:if="{{userType == 2}}">
    <!-- 合伙人底部 -->
    <view class="white_bg footer">
      <view class="allpricek">
        <text>总报价</text>
        <text class="gray allprice" wx:if="{{order.orderState < 20}}">等待报价</text>
        <!-- 已报价 -->
        <text class="red allprice" wx:if="{{order.orderState >= 20}}">￥{{order.totalPrice}}</text>
      </view>
    </view>
    <!-- 已报价 -->
    <view style="width: 100%;height: 138rpx;margin: auto;" wx:if="{{order.orderState == 20}}"></view>
    <!-- 已报价 -->
    <view class="bottoms white_bg" wx:if="{{order.orderState == 20}}">
      <button type="button" class="white_bg orange orange_border btn" style="margin-left: 0;" bindtap="goReport">低价举报</button>
      <button type="button" class="gradual_bg white btn" bindtap="goInfo" style="margin-left: 10rpx;">立即下单</button>
    </view>
  </view>

